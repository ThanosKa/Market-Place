    "start": "ts-node src/server.ts",
    "clear": "npm cache clean --force",
    "dev": "ts-node-dev src/server.ts",
    "build": "tsc",
    "start:prod": "node dist/server.js",
    "docker:build": "docker build -t marketplace-backend .",
    "docker:run": "docker run --name marketplace-backend -p 5001:5001 -e NODE_ENV=development -e SERVER=host.docker.internal -e PROTOCOL=http -e PORT=5001 -e API_BASEPATH=api -e MONGODB_URI=\"mongodb+srv://admin:admin@applicationcluster.ph1eyjh.mongodb.net/?retryWrites=true&w=majority&appName=ApplicationCluster\" marketplace-backend",
    "docker:stop": "docker stop marketplace-backend || true",
    "docker:remove": "docker rm marketplace-backend || true",
    "docker:logs": "docker logs marketplace-backend",
    "docker:restart": "npm run docker:stop && npm run docker:remove && npm run docker:run",
    "docker:sh": "docker exec -it marketplace-backend /bin/sh",
    "docker:prune": "docker system prune -f"
  },
